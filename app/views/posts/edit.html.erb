Edit Post

<%= form_for @post do |form| %>
  <%= form.label :title, ("Title: ")%>
  <%= form.text_field :title, placeholder: "Title" %>
  <br>
  <%= form.text_field :content, placeholder: "Enter Content" %>
  <br>
  <%= form.submit ("Confirm") %>
  <%=link_to("Delete Post", post_path(@post), method: :delete, data: {confirm: "Do you want to delete this post?"})%>

<% end %>
